{

    "root": true,

    "parser": "@typescript-eslint/parser",

    "plugins": [

      "@typescript-eslint",

      "no-loops"

    ],

    "extends": [

      "eslint:recommended",

      "plugin:@typescript-eslint/eslint-recommended",

      "plugin:@typescript-eslint/recommended"

    ],

    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },

    "rules": {

      "no-console": 0,

      "@typescript-eslint/no-explicit-any": 0,

      "no-empty": 0,

      "no-trailing-whitespace": 0,

      "no-loops/no-loops": 1

    }

  }


